#include <iostream>

using namespace std;
int main(){
    char op;
    float a, b;
    float c;
    cout<<"Here's The New Version Calculater............\n"<<endl;
    cout<<"Please Enter The First Number = ";
    cin>> a;
    cout<<"Enter The Operater (+, -, /, ^, *) = ";
    cin>> op;
    
    if(op=='^'){
    	cout<<"Your Answer Is = "<<a*a;
	}
	else{
		cout<<"Please Enter The Second Number = ";
		cin>> b;
	}
	

    if(op=='+'){
        c = a + b;
        cout<< "Your Answer Is = "<< c;
    }
    if(op=='-'){
        c = a - b;
        cout<< "Your Answer Is = "<< c;
    }
    if(op=='/'){
        c = a / b;
        cout<< "Your Answer Is = "<< c;
    }
    if(op=='*'){
        c = a * b;
        cout<< "Your Answer Is = "<< c;
    }  
    return 0;    
    }
